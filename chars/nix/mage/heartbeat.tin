#class {player_heartbeat} {kill}
#class {player_heartbeat} {open}

#alias {_player_heartbeat} {
        #if !$idle_flag {
            #if {$my[gem] < 80} {ffetch gem};
            #if {$my[immersion][count] && $my[golem][reset] > 95} {cast mystic immersion};
            #if {$my[gp1][current] > 75 && $my[super][current]} {cast explosive release};
    };
};

#class {player_heartbeat} {close}