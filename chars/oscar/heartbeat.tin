#class {player_heartbeat} {kill}
#class {player_heartbeat} {open}

#var bot_toggle 1;

#alias {_player_heartbeat} {
    #if !$idle_flag {#if {$my[sp][current] < 50 || $my[gp1][current] > 45 && !$bot_toggle} {.pause;study spellbook;#var bot_toggle 1};
    #if {$my[sp][current] > 1000 && $bot_toggle} {..;#var bot_toggle 0};
    #if {$my[g2n] == 100 && $gl_run} {#var gl_run 0;#delay 120 go_glvl};
    };
};

#class {player_heartbeat} {close}