#var aoe_enabled 0;

#alias {aoeon} {
    #var aoe_enabled 1;
    #show Armour of Elements corpse immolation enabled.;
};
#alias {aoeoff} {
    #var aoe_enabled 0;
    #show Armour of Elements corpse immolate disabled.;
};

#nop Add killing blow corpse immolation....



#alias aoeimmolate {
    immolate corpse;
};


