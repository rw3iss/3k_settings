#NOP ---Song Buffs
#alias {buffup} {
	#math buff_son_of_man {40*2};
	#math buff_delay_1 {40*2};
	#math buff_memory {38*2};
	#math buff_delay_2 {78*2};
	#math buff_let_it_be {59*2};
	#math buff_delay_3 {137*2}
	#math buff_sunday {20*2};
	#math buff_delay_4 {157*2};
	#math buff_hero {56*2};

	remove shield;
	perform son of man for %1;
	#delay $buff_delay_1 {remove shield;perform memory for %1};
	#delay $buff_delay_2 {remove shield;perform let it be for %1};
	#delay $buff_delay_3 {remove shield;perform naked sunday for %1};
	#delay $buff_delay_4 {remove shield;perform grinch's hero for %1};
}

