#class {bot} {open}
#var {area} {Night of Colour};
#var check_death 1;

#var bot_message_1 '---- NIGHT OF COLORS STEPPER ----';
#var bot_message_2 '----  SAFE MODE: NO PEACE    ----';

#if {{$guild} == {bard}} {
	#nop - Turn off kill-em-all
	#var kill_em_all 0

	echo_divider1;
	clear_prots;reflex_clear;
	echo_divider2;
    echo_prots_header;
    prots_pfe;prots_blink;prots_hs;prots_pfc;
	echo_reflex_header;
	reflex_critic 200;reflex_dirge 200;reflex_ma 400;
	echo_divider2;

	#alias .set_prots {
        #var defs[pe] 1;
        #var defs[blink] 1;
        #var defs[hs] 1;
        #var defs[es] 1;
    }
};

#var {botpath} {n;n;w;n;n;n;s;s;s;s;s;s;sw;s;n;n;n;n;n;n;n;n;n;n;ne;climb;u;u;d;d;d;sw;s;s;s;s;s;w;n;s;s;s;s;s;sw;s;s;n;n;n;n;n;n;n;n;n;nw;s;s
;s;s;s;s;s;s;s;n;nw;n;n;n;n;n;n;sw;s;s;s;s;nw;n;n;sw;e;e;e;e;e;e;e;e;e;s;n;n;e;s;s;s;se;n;n;n;n;n;w;n;e;n;ne;s;s;s;s;s;s;s;s;s;se;n;n;n;n;n;n;n;n;n;n;n;s;e;n;n;s;s;s;s;s;s;s;s;s;s;s;ne;n;n;n;n;n;
n;n;n;n;se;s;s;s;s;s;s;s;ne;n;n;n;n;n;se;s;n;se;s;s;s;s;s;se;sw;ne;nw;ne;n;n;n;se;sw;s;w;n;w;w;w;w;w;w;w;w;w;n;w;s}

#act {^-M-_{Impediment|Paragon|Timorous|Radiance|Dusky Glimmer|Furtive|Dancing Glimmer|Smoking Glimmer|
            Darting Glimmer|Russet Glimmer|Mud|Snare|Yellowish Glimmer|Hostile|Swoop|Dismal|Hostile|Gloom|Rapid|Furtive|Bulwark}%*} {
    #var foundtimes 1;
	#regex {%2} {7B{[0-9]+}} {#var foundtimes &1;};
    #var mobname_long %1;
    
    #if {"%1" == "Furtive"} {@botSetMobActions{furtive;$foundtimes};};
    #if {"%1" == "Bulwark"} {@botSetMobActions{bulwark;$foundtimes};};
    #if {"%1" == "Rapid"} {@botSetMobActions{rapid;$foundtimes};};
    #if {"%1" == "Gloom"} {@botSetMobActions{gloom;$foundtimes};};
    #if {"%1" == "Hostile"} {@botSetMobActions{hostile;$foundtimes};};
    #if {"%1" == "Dismal"} {@botSetMobActions{dismal;$foundtimes};};
    #if {"%1" == "Swoop"} {@botSetMobActions{swoop;$foundtimes};};
    #if {"%1" == "Paragon"} {@botSetMobActions{paragon;$foundtimes};};
    #if {"%1" == "Impediment"} {@botSetMobActions{impediment;$foundtimes};};
    #if {"%1" == "Timorous"} {@botSetMobActions{timorous;$foundtimes};};
    #if {"%1" == "Radiance"} {@botSetMobActions{radiance;$foundtimes};};
    #if {"%1" == "Dusky Glimmer"} {@botSetMobActions{glimmer;$foundtimes};};
    #if {"%1" == "Darting Glimmer"} {@botSetMobActions{glimmer;$foundtimes};};
    #if {"%1" == "Russet Glimmer"} {@botSetMobActions{glimmer;$foundtimes};};
    #if {"%1" == "Yellowish Glimmer"} {@botSetMobActions{glimmer;$foundtimes};};
    #if {"%1" == "Dancing Glimmer"} {@botSetMobActions{glimmer;$foundtimes};};
    #if {"%1" == "Smoking Glimmer"} {@botSetMobActions{glimmer;$foundtimes};};
    #if {"%1" == "Mud"} {@botSetMobActions{mud;$foundtimes};};
    #if {"%1" == "Snare"} {@botSetMobActions{snare;$foundtimes};};
    
    .check_monster;
} {3}

#alias {.check_room} {
    consider shadow;
	#var foundshadow 0;
    #act {^Shadow} {
        @botSetMobActions{shadow;1};
        #var mobname_long Shadow;
        .stop_prompt;
        k $mobname;
        #unaction {^Shadow}
    };
	#delay {.4} {#if {!$foundshadow} {#path walk};}
}

#act {^-O-_{White web}} {
	#if {"%1" == "White web" && $corpses[total] > 10} {
        #var foundobject 1;#var object_action {shake web}
    } {
        #path walk;.bot
    };
	_check_item
} {2}

#act {^Vibrations shake the web, and fade to stillness.} {
    #if {$found_mob} {
        #nop
    } {
        #path walk;
        .bot
    }} {0};

#act {^Vibrations shake the web, the owner pounces!} {
	@botSetMobActions{furtive;1};
	#var mobname_long Furtive;
	kill furtive;
	ewell;
} {0}

#alias {.check_death} {
    wrap;get all;put all in disc
}

#class {bot} {close}

#read common/bot/generic.tin
