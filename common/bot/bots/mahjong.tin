	#if {"Black Tiger"=="%1"} {@botSetMobActions{tiger};};
	#if {"Purple Butterfly"=="%1"} {@botSetMobActions{butterfly};};
	#if {"Red Butterfly"=="%1"} {@botSetMobActions{butterfly};};
	#if {"Sea Serpent"=="%1"} {@botSetMobActions{serpent};};
	#if {"Golden Phoenix"=="%1"} {@botSetMobActions{phoenix};};
	#if {"Leaping Rat"=="%1"} {@botSetMobActions{rat};};
	#if {"Lumbering Ox"=="%1"} {@botSetMobActions{ox};};
	#if {"Charging Ram"=="%1"} {@botSetMobActions{ram};};
	#if {"Jade Phoenix"=="%1"} {@botSetMobActions{phoenix};};
	#if {"Red Rabbit"=="%1"} {@botSetMobActions{rabbit};};
	#if {"Red Chinese Dragon"=="%1"} {@botSetMobActions{dragon};};
