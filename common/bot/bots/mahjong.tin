	#var foundtimes 1;
    #regex {%2} {7B{[0-9]+}} {#var foundtimes &1;};
    #var mobname_long %1;

  	#if {"Winged Horse"=="%1"} {@botSetMobActions{horse};};
	#if {"Blue Dolphin"=="%1"} {@botSetMobActions{dolphin};};
