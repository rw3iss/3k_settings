/* Todo: make friends auto-defend list */
#act {{(.*) (\!)?attacking Toren\!}} {defend toren};

/* Signify there is a player in the room, if not in friends list */
#act {{^-P-_(.*)}} {
    #var foundfriend 0;
	#foreach {$playerWhitelist} {name} {
		#if {"%0" == "%*$name%*"} {
            #var foundfriend 1;
        };
	};
    #if {!$foundfriend} {#var foundplayer 1;#show PLAYER.;};
} {1};



/* Bot end actions... */
#act {#END OF PATH} {
    #if {!$loop || !$loophadmob} {
        #show \nLooping not enabled. Stopping.;
        .stop;
    } {
        #show \nLooping bot...;
        #path load botpath;
        #var loophadmob 0'
        .bot;
    };
};


/* If for some reason we attack and mob isn't present, keep the bot going... */
#act {{^There is no (\w+) here}} {
	#if {$botting == 1 && $halt == 0} {
		#if {"%2" == "$mobname" || "%2" == "$prevMobName"} {
			l;..;
		};
	};
};


/* helpers */
#function {botSetMobName} {
	#var botPrevMobName $mobname;
	#var mobname %0;
    #var foundmob 1;
    #return;
};


#class {bot} {close}