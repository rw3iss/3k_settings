#class {bot} {open}

#var botting 1;

#var foundmob 0;
#var foundplayer 0;
#var founditems 0;
#var loophadmob 0;

#var prevMobName 0;
#var mobname 0;

#var loop 1;
#var dontAttack 0;
#var pickupAll 0;
#var justItems 0;


/* ignore these players */
#var playerWhitelist {A vicious bear;Nix;Toren;Byron;Martyr;Roor;Void;Killgrave};

/* load the selected bot's path into ready state */
#path load botpath;

/* pause the bot */
#alias {.pause} {
	#var halt 1;
};
#alias {.p} {.pause};

/* kill the bot */
#alias {.stop} {
	.pause;
    #unvar botpath;
	#unalias {..};
	#unalias {.onPrompt};
	#unact {^>$};
	#class {bot} {kill};
	#class {xbot} {kill};
    #show Bot killed.;
};
#alias {.s} {.stop};


/* starts / continues the bot after it's loaded */
#alias {..} {
	#class {xbot} {open};

	#var halt 0;

    #act {{^-R-_}} {.onRoom} {0};

	#alias {.onRoom} {
		#var foundplayer 0;
		#var foundmob 0;
        .prompt;
	};

    #alias {.prompt} {
        #act {^>$} {.onPrompt};
    };
    
    #alias {yy} {.prompt;#var foundmob 1;#var loophadmob 1;};

	#alias {.onPrompt} {
        #nop #show mob? $foundmob  player? $foundplayer;

        #if {$foundplayer} {
            .skip;
            #path walk;
        } {
            #if {$dontAttack} {
                #path walk;
            } {
                #if {$foundmob} {
                    .skip;
                    .pause;
                    k $mobname;
                } {
                    .skip;
                    #path walk;
                }
            }
        };

        #if {$founditems} {
            #if {$pickupAll} {#nop get all;}
        };

    };

	#alias {.skip} {#unact {^>$}};
    
	glance;

	#class {xbot} {close};
};
#alias {.bot} {#if {$halt == 0} {..}};


